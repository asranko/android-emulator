{
          "name": "Android Emulator",
          "image": "mcr.microsoft.com/devcontainers/universal:2",
          "features": {
                        "ghcr.io/devcontainers/features/docker-in-docker:2": {},
                        "ghcr.io/devcontainers/features/desktop-lite:1": {}
          },
          "forwardPorts": [6080, 5000],
          "portsAttributes": {
                        "6080": {
                                          "label": "noVNC (Android Emulator)",
                                          "onAutoForward": "openBrowser"
                        },
                        "5000": {
                                          "label": "Android Commander (Dashboard)",
                                          "onAutoForward": "notify"
                        }
          },
          "postCreateCommand": "bash .devcontainer/setup-android.sh && pip install flask && nohup python3 dashboard/app.py > dashboard.log 2>&1 &",
          "customizations": {
                        "vscode": {
                                          "extensions": [
                                                                "ms-azuretools.vscode-docker"
                                          ]
                        }
          }
}
